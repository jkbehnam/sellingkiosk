                    android:id="@+id/detail_tv_food_name"
                    fontPath="fonts/Pelak-ExtraBold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="سالاد سزار گریل"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/detail_tv_food_time"
                    fontPath="fonts/Pelak-Regular.ttf"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="10 دقیقه" />

                <TextView
                    android:id="@+id/detail_tv_food_price"
                    fontPath="fonts/Pelak-Regular.ttf"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="250 هزار تومان" />

